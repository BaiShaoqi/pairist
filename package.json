{
  "name": "pairist",
  "version": "1.0.0",
  "description": "Pairing board for the modern era.",
  "author": "Luan Santos <cfcluan@gmail.com>",
  "private": true,
  "scripts": {
    "e2e": "vue-cli-service e2e --mode=e2e",
    "test": "vue-cli-service test",
    "lint": "vue-cli-service lint",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --mode=$TARGET_ENV",
    "migrate": "node migrations/migrate.js $TARGET_ENV",
    "set-version": "scripts/built-app-version | firebase -P $TARGET_ENV database:set /config/version -y",
    "deploy": "yarn build && firebase deploy -P $TARGET_ENV && yarn migrate && yarn set-version",
    "deploy:staging": "TARGET_ENV=staging yarn deploy",
    "deploy:e2e": "TARGET_ENV=e2e yarn deploy",
    "deploy:production": "TARGET_ENV=production yarn deploy"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "chmod a-w migrations/*.migration.js && lint-staged"
  },
  "dependencies": {
    "firebase": "^4.9.0",
    "firebase-admin": "^5.8.2",
    "firebase-functions": "^0.8.1",
    "interact.js": "^1.2.8",
    "lodash": "^4.17.4",
    "pluralize": "^7.0.0",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "vuetify": "^1.0.0",
    "vuex": "^3.0.1",
    "vuexfire": "^2.3.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.1",
    "@vue/cli-plugin-e2e-nightwatch": "^3.0.0-beta.1",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.1",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.1",
    "@vue/cli-service": "^3.0.0-beta.1",
    "@vue/eslint-config-prettier": "^3.0.0-beta.1",
    "@vue/test-utils": "^1.0.0-beta.10",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.0.4",
    "firebase-mock": "^2.0.20",
    "flush-promises": "^1.0.0",
    "lint-staged": "^6.0.0",
    "stylelint": "^9.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.13"
  }
}
